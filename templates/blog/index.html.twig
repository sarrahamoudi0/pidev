{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="inner-banner"> </div>
    <div class="container">
    <h1>Blog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.title }}</td>
                <td>{{ blog.description }}</td>
                <td><img src="{{ asset('images/' ~ blog.image) }}" alt="{{ blog.title }}" width="200"/></td>
                <td>{{ blog.date ? blog.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-outline-danger">show</a>
                    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-outline-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div style="display: flex; justify-content: center;">
    <a href="{{ path('app_blog_new') }}" class="btn btn-outline-light" >Create new</a>
</div>
    </div>
{% endblock %}
