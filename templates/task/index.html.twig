{% extends 'base.html.twig' %}

{% block title %}
    Projects 
{% endblock %}

{% block body %}
    <div class="inner-banner"></div>
    <div class="w3-services py-5">
        <div class="container py-lg-4">
            <div class="row w3-services-grids">

                {% for t in tasks %}
                    <div class="col-lg-4 col-md-6 causes-grid">
                        <div class="causes-grid-info">
                            <a href="blog-single.html">
                                <img src="assets/images/ab1.jpg" class="img-fuild" alt=""></a>
                                <a href="#" class="cause-title-wrap">
                                    <h4 class="cause-title">
                                        {{ t.name }}
                                    </h4>
                                </a>
                                <p class="card-text mb-0">
                                    {{ t.description }}
                                </p>
                                <div class="barWrapper">
                                    <span class="progressText">
                                        <b>
                                            {{ t.status }}
                                        </b>
                                    </span>


                                </div>
                                <a href="/task/update/{{t.id}}" class="btn btn-style btn-primary mt-4">
                                    Update
                                </a>
                                <a href="/task/remove/{{t.id}}" class="btn btn-style btn-primary mt-4">
                                    Delete
                                </a>
                            </div>

                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    {% endblock %}
    